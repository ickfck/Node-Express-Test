
<html>
    <head>
        <title>Administration</title>
        <link rel="stylesheet" type = "text/css" href = '/Styles/styles.css'>
    </head>
    <body>
        <div id="container">        
            <%- include ("./partials/menu") %>
            <div id="header">
                <% if (typeof statusLog !== 'undefined') { %><div id="statusbar">
                    <b><%= statusLog %></b></div>
                    <% } %>
            </div>
                <div id="admin_menu">
                    <a href="/admin/admin_comments">Comments Admin.</a>
                    <a href="/admin/admin_users">Users Admin.</a>                
                    <a href="/admin/admin_articles">Articles Admin.</a>
                </div>  
            <div id ="Articles_list">List Of Articles:
                <table>
                    <tr><td>Article Author</td><td>Article Title</td><td>Article Date</td></tr>
                    <% data.forEach(entry => { %>
                    <tr>
                        <td><%= entry.article_author %></td>
                        <td><%= entry.article_title %></td>
                        <td><%= entry.article_date %></td>        
                        <td><a href="../users/edit_article/<%= entry.article_id %>">EDIT</a></td>                                        
                    </tr>
                    <% }) %>
                </table>
            </div>        
        <div id="footer"><%- include ("./partials/footer") %></div>
    </div>
    </body>
</html>